// prisma/schema.prisma
datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    name     String @unique
    username String @unique
    password String
    role String

    @@map("users")
}
